<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</head>
<body>
    <div class="m-3">
        <h1>Web</h1>
        <div class="list-group list-group-horizontal">
            <a class="list-group-item @(ViewContext?.RouteData?.Values["page"]?.ToString() == "/Index" ? "active" : "")" asp-page="/Index">Úvod</a>
            <a class="list-group-item @(ViewContext?.RouteData?.Values["page"]?.ToString() == "/Seznam" ? "active" : "")" asp-page="/Seznam">Seznam</a>
            <a class="list-group-item @(ViewContext?.RouteData?.Values["page"]?.ToString() == "/Ukoly" ? "active" : "")" asp-page="/Ukoly">Úkoly</a>
        </div>
        @RenderBody()
    </div>
</body>
</html>
